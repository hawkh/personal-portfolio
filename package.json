{
  "name": "portfolio",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "build:static": "next build",
    "build:production": "NODE_ENV=production next build",
    "build:github": "GITHUB_REPOSITORY=$npm_package_name next build",
    "deploy": "NODE_ENV=production npm run build && echo '' > out/.nojekyll",
    "deploy:github": "NODE_ENV=production GITHUB_REPOSITORY=$npm_package_name npm run build && echo '' > out/.nojekyll",
    "preview": "npm run build:static && npx serve out -p 3001",
    "clean": "rm -rf .next out",
    "analyze": "ANALYZE=true npm run build",
    "check": "npm run lint && npm run type-check",
    "verify": "node scripts/verify-deployment.js",
    "test:deployment": "node scripts/test-deployment.js"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.1",
    "@tailwindcss/forms": "^0.5.7",
    "framer-motion": "^11.0.3",
    "next": "14.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "typewriter-effect": "^2.21.0"
  },
  "devDependencies": {
    "@types/node": "^20.11.16",
    "@types/react": "^18.2.52",
    "@types/react-dom": "^18.2.18",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.4.17",
    "postcss": "^8.4.35",
    "serve": "^14.2.1",
    "tailwindcss": "^3.4.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.12"
  }
}